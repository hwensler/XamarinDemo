<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="wenslerh.Views.ItemUpdatePage"
             Title ="Update An Item">
    <ContentPage.Content>
        <StackLayout Spacing="20" Padding="15">
            <Label Text="{Binding Name}" FontSize="Medium" Margin="0" />
            <Editor Text="{Binding Name}" FontSize="Small" Margin="0" />
            <Label Text="{Binding Description}" FontSize="Medium" Margin="0" />
            <Editor Text="{Binding Description}" FontSize="Small" Margin="0" />
            <Label Text="{Binding Strength}" FontSize="Medium" Margin="0" />
            <Editor Text="{Binding Strength}" FontSize="Small" Margin="0" />
            <Button Text="Save" Clicked="OnSaveClicked" />
            <Button Text="Cancel" Clicked="OnCancelClicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>